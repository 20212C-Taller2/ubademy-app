<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ubademy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ubademy_2</item>
        <item name="colorPrimaryVariant">@color/ubademy_3</item>
        <item name="colorOnPrimary">@color/quantum_grey800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ubademy_2_teal</item>
        <item name="colorSecondaryVariant">@color/ubademy_3_teal</item>
        <item name="colorOnSecondary">@color/quantum_grey800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ubademy_2</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Autofill highlight color. -->
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>

    <!-- NoActionBar application theme. -->
    <style name="Theme.Ubademy.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ubademy_2</item>
        <item name="colorPrimaryVariant">@color/ubademy_3</item>
        <item name="colorOnPrimary">@color/quantum_grey800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ubademy_2_teal</item>
        <item name="colorSecondaryVariant">@color/ubademy_3_teal</item>
        <item name="colorOnSecondary">@color/quantum_grey800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Autofill highlight color. -->
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>
</resources>